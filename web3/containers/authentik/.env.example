# Authentik Configuration
# REQUIRED: Generate secure random passwords and keys
# You can generate these with:
# openssl rand -base64 36 | tr -d '\n'

# PostgreSQL Configuration
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
POSTGRES_USER=authentik
POSTGRES_DB=authentik

AUTHENTIK_POSTGRESQL__HOST=database
AUTHENTIK_POSTGRESQL__USER=${POSTGRES_USER}
AUTHENTIK_POSTGRESQL__PASSWORD=${POSTGRES_PASSWORD}
AUTHENTIK_POSTGRESQL__NAME=${POSTGRES_DB}

# Authentik Secret Key - REQUIRED
AUTHENTIK_SECRET_KEY=CHANGE_ME_TO_SECURE_SECRET_KEY

# Email Configuration (optional)
# SMTP Server settings for sending emails
# AUTHENTIK_EMAIL__HOST=smtp.gmail.com
# AUTHENTIK_EMAIL__PORT=587
# AUTHENTIK_EMAIL__USERNAME=your-email@domain.com
# AUTHENTIK_EMAIL__PASSWORD=your-app-password
# AUTHENTIK_EMAIL__USE_TLS=true
# AUTHENTIK_EMAIL__USE_SSL=false
# AUTHENTIK_EMAIL__TIMEOUT=10
# AUTHENTIK_EMAIL__FROM=authentik@yourdomain.com

# Bootstrap Configuration (optional)
# These are used for initial setup only
# AUTHENTIK_BOOTSTRAP_PASSWORD=admin-password
# AUTHENTIK_BOOTSTRAP_TOKEN=admin-api-token
# AUTHENTIK_BOOTSTRAP_EMAIL=admin@yourdomain.com

# Security Settings
AUTHENTIK_DISABLE_STARTUP_ANALYTICS=true
AUTHENTIK_ERROR_REPORTING__ENABLED=false
