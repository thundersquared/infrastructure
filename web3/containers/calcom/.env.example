# Database Configuration for PostgreSQL service
POSTGRES_USER=calcom
POSTGRES_PASSWORD=change_me_to_a_secure_password
POSTGRES_DB=calcom

# Database URLs for Cal.com application
DATABASE_URL=postgresql://calcom:change_me_to_a_secure_password@database:5432/calcom
DATABASE_DIRECT_URL=postgresql://calcom:change_me_to_a_secure_password@database:5432/calcom

# Cal.com Application URLs
NEXT_PUBLIC_WEBAPP_URL=https://cal.yourdomain.com
NEXTAUTH_URL=https://cal.yourdomain.com/api/auth

# Security Keys - Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=change_me_generate_with_openssl_rand_base64_32
CALENDSO_ENCRYPTION_KEY=change_me_generate_with_openssl_rand_base64_32
CRON_API_KEY=change_me_generate_with_openssl_rand_base64_32

# Web Push Notifications - Generate with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=change_me_generate_with_web_push
VAPID_PRIVATE_KEY=change_me_generate_with_web_push

# Optional: Email Configuration (SendGrid)
# SENDGRID_API_KEY=SG.xxx
# SENDGRID_EMAIL=noreply@yourdomain.com
# NEXT_PUBLIC_SENDGRID_SENDER_NAME=Your Company

# Optional: License Key (for enterprise features)
# CALCOM_LICENSE_KEY=your-license-key

# Optional: Telemetry and other settings
# CALCOM_TELEMETRY_DISABLED=false
# NEXT_PUBLIC_LICENSE_CONSENT=true
