{{ ansible_managed | comment }}

stream {
    # Proxy SMTP
    server {
        listen 25;
        proxy_pass 127.0.0.1:10025;
        proxy_protocol on;
    }

    # Proxy HTTP
    server {
        listen 10080;
        proxy_pass 127.0.0.1:10080;
        proxy_protocol on;
    }

    # Proxy POP3
    server {
        listen 110;
        proxy_pass 127.0.0.1:10110;
        proxy_protocol on;
    }

    # Proxy IMAP
    server {
        listen 143;
        proxy_pass 127.0.0.1:10143;
        proxy_protocol on;
    }

    # Proxy HTTPS
    server {
        listen 10443;
        proxy_pass 127.0.0.1:8443;
        proxy_protocol on;
    }

    # Proxy SMTPS
    server {
        listen 10465;
        proxy_pass 127.0.0.1:465;
        proxy_protocol on;
    }

    # Proxy Submission
    server {
        listen 10587;
        proxy_pass 127.0.0.1:587;
        proxy_protocol on;
    }

    # Proxy IMAPS
    server {
        listen 10993;
        proxy_pass 127.0.0.1:993;
        proxy_protocol on;
    }

    # Proxy POP3S
    server {
        listen 10995;
        proxy_pass 127.0.0.1:995;
        proxy_protocol on;
    }
}
