{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ansible": {
    "enabled": true
  },
  "docker": {
    "enabled": true,
    "registries": {
      "ghcr.io": {
        "username": "{{ secrets.GHCR_USERNAME }}",
        "password": "{{ secrets.GHCR_TOKEN }}"
      }
    }
  },
  "hostRules": [
    {
      "matchHost": "ghcr.io",
      "username": "{{ secrets.GHCR_USERNAME }}",
      "password": "{{ secrets.GHCR_TOKEN }}"
    }
  ]
}